NAME = push_swap

CC = clang

FLAGS = -Wall -Wextra -Werror

HEADERS_DIR = includes/
HEADERS_LIST =	push_swap.h
HEADER = $(addprefix $(HEADERS_DIR), $(HEADERS_LIST))

SRC_FILE =	init.c		stack.c		parser.c	validator.c			\
			index.c		markup.c	commands.c	direction.c			\
			rotate.c	swap.c		push.c		free.c				\
			print_commands.c		utils.c		commands_stack_b.c	\
			push_swap.c		commands_stack_a.c		reverse_rotate.c

SRC_NAME = $(addprefix srcs/, $(SRC_FILE))

OBJ = $(SRC_NAME:.c=.o)

all:	$(NAME)

$(NAME):	$(OBJ) $(HEADER)
	@$(CC) $(FLAGS) $(INCLUDES) $(OBJ) -o $(NAME)

.c.o:
	$(CC) $(FLAGS) -I $(HEADER) -c $< -o $(<:.c=.o)

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -rf $(NAME)

re: fclean all clean

.PHONY: clean fclean re bonus all
